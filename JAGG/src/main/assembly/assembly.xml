<assembly>
    <id>distr</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>jagg</baseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>src</outputDirectory>
            <includes>
                <include>jagg-core/pom.xml</include>
                <include>jagg-core/LICENSE.txt</include>
                <include>jagg-core/src/main/**</include>
                <include>jagg-core/src/test/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>jagg-core/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>jagg-core-${project.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>site</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>